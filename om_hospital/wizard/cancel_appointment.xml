<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="cancel_appointment_wizard_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="appointment_id"/>
                        <field name="reason"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="cancel_action" string="Cancel Appointment"
                            type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Discard" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_appointment_wizard_action" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="cancel_appointment_wizard"
              name="Cancellation"
              parent="hospital_appointment_root"
              action="cancel_appointment_wizard_action"
              sequence="20"/>
</odoo>