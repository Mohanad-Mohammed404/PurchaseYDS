<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="female_patient_action" model="ir.actions.act_window">
        <field name="name">Female Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_age' : 19 , 'default_gender' : 'female', 'default_name' :
            "Example"}</field>
        <field name="domain">[('gender','=','female')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Female Patient data here!
            </p>
        </field>
    </record>

    <menuitem id="female_patient"
        name="Female Patient"
        action="female_patient_action"
        parent="hospital_patient_root"
        sequence="10" />

</odoo>