<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="patient_tag_tree" model="ir.ui.view">
        <field name="name">patient_tag_tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree string="patient_tag_tree">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="patient_tag_form" model="ir.ui.view">
        <field name="name">patient_tag_form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form string="patient_tag_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="color2" widget="color" groups="base.group_no_one"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_tag_action" model="ir.actions.act_window">
        <field name="name">Patient Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment data here!
            </p>
        </field>
    </record>

    <menuitem id="patient_tag"
              name="Patient Tag"
              parent="configuration_root"
              action="patient_tag_action"
              sequence="0"/>

</odoo>