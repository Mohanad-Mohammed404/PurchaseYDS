<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointment">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"
                             t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="patient_id" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='done'"
                  decoration-warning="state == 'in_consultation'"
                  decoration-info="state == 'draft'"
                  decoration-danger="state == 'cancel'" sample="1" multi_edit="1">

                <field name="patient_id"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="gender" optional="hide"/>
                <field name="ref" optional="show"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state == 'done'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>


    <record id="appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" string="Mark as Done"
                            type="object" class="oe_highlight"
                            data-hotkey="v" states="in_consultation"/>
                    <button name="action_in_consultation" string="In Consultation"
                            class="oe_highlight" type="object"
                            data-hotkey="o" states="draft"/>
                    <!--<button name="%(om_hospital.cancel_appointment_wizard_action)d" string="Cancel"
                            type="action" data-hotkey="c" states="in_consultation,draft"/>-->
                    <button name="action_cancel" string="Cancel"
                            type="object" data-hotkey="c" states="in_consultation,draft"/>
                    <button name="action_draft" string="Draft"
                            type="object" data-hotkey="d" class="oe_highlight"
                            states="cancel"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" default_focus="1"/>
                            <field name="doctor_id"/>
                            <field name="gender"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="hide_price" groups="base.group_no_one"/>
                            <field name="appointment_time"/>
                            <field name="booking_date"/>
                            <button name="action_test"
                                    string="Button test"
                                    type="object"
                                    groups="base.group_no_one"
                                    help="Once you click the message printed in log"
                                    confirm="Are you sure that you want execute python code ?"
                                    class="oe_highlight"/>
                            <button name="%(om_hospital.patient_action)d"
                                    string="Action test"
                                    type="action"
                                    groups="base.group_no_one"
                                    confirm="Are you sure that you want open patients page ?"
                                    class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Enter your prescrption...."
                                   options="{'collaborative': true, 'resizable': true, 'codeview' : true}"/>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_id">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="appointment_action" model="ir.actions.act_window">
        <field name="name">Patient Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment data here!
            </p>
        </field>
    </record>

    <menuitem id="patient_appointment_root"
              name="Patient Appointment"
              parent="hospital_appointment_root"
              action="appointment_action"
              sequence="10"/>
</odoo>